<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardMaxElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    style="button"
    xmlns:app="http://schemas.android.com/apk/res-auto">



<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativelayout">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/back"
        android:backgroundTint="@color/black"
        app:round="8dp" />


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:layout_toEndOf="@id/image"
        android:lines="2"
        android:maxLines="2"
        android:minLines="1"
        android:text="How to create android application in android studio | Android studio "
        android:textColor="@color/Sub_Txt"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/image"
        android:lines="2"
        android:maxLines="2"
        android:minLines="1"
        android:text="How to create android How to create android application in android studio | Android studio "
        android:textColor="@color/Border_Txt"
        android:textSize="12dp"
        android:textStyle="bold" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/channel_logo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toEndOf="@id/image"
            android:layout_below="@id/description"
            android:layout_marginLeft="10dp"
            app:round="4dp"
            android:src="@color/black"/>


    <TextView
        android:id="@+id/IdListChannelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@id/channel_logo"
        android:lines="1"
        android:maxLines="1"
        android:minLines="1"
        android:text="Uttam Nath"
        android:textColor="@color/Border_Txt"
        android:textSize="12dp"
        android:textStyle="bold" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>